{
  "Type": "AWS::IAM::Policy",
  "Properties": {  
    "PolicyName": "CognitoUnAuthPolicy",
    "PolicyDocument": {  
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Action": [
            "mobileanalytics:PutEvents",
            "cognito-sync:*"
          ],
          "Resource": [
            "*"
          ]
        }
      ]
    },
    "Roles": [ 
      {  
        "Ref":"CognitoUnAuthRole"
      }
    ]
  }
}
