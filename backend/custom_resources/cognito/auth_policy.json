{
  "Type": "AWS::IAM::Policy",
  "Properties": {
    "PolicyName": "CognitoAuthPolicy",
    "PolicyDocument": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Action": [
            "mobileanalytics:PutEvents",
            "cognito-sync:*",
            "cognito-identity:*"
          ],
          "Resource": [
            "*"
          ]
        },
        {
          "Effect": "Allow",
          "Action": "execute-api:Invoke",
          "Resource": [
            {
              "Fn::Join": [
                "",
                [
                  "arn:aws:execute-api:us-west-2:",
                  {
                    "Ref": "AWS::AccountId"
                  },
                  ":",
                  {
                    "Ref": "ApiGatewayRestApi"
                  },
                  "/${opt:stage}/POST/contact_forms"
                ]
              ]
            },
            {
              "Fn::Join": [
                "",
                [
                  "arn:aws:execute-api:us-west-2:",
                  {
                    "Ref": "AWS::AccountId"
                  },
                  ":",
                  {
                    "Ref": "ApiGatewayRestApi"
                  },
                  "/${opt:stage}/DELETE/contact_forms"
                ]
              ]
            },
            {
              "Fn::Join": [
                "",
                [
                  "arn:aws:execute-api:us-west-2:",
                  {
                    "Ref": "AWS::AccountId"
                  },
                  ":",
                  {
                    "Ref": "ApiGatewayRestApi"
                  },
                  "/${opt:stage}/GET/contact_forms"
                ]
              ]
            }
          ]
        }
      ]
    },
    "Roles": [
      {
        "Ref":"CognitoAuthRole"
      }
    ]
  }
}
