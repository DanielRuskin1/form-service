{
  "Type": "AWS::IAM::Policy",
  "Properties": {
    "PolicyName": "LambdaSESPolicy",
    "PolicyDocument": {
      "Version": "2012-10-17",
      "Statement": [  
        {
          "Effect": "Allow",
          "Action": [
            "ec2:CreateNetworkInterface",
            "ec2:DescribeNetworkInterfaces",
            "ec2:DeleteNetworkInterface"
          ],
          "Resource": "*"
        },
        {
          "Effect": "Allow",
          "Action": [
            "ses:SendEmail", 
            "ses:SendRawEmail"
          ],
          "Resource":"*"
        }
      ]
    },
    "Roles": [ 
      {  
        "Ref":"LambdaSESRole"
      }
    ]
  }
}
